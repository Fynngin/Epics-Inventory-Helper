{
    "manifest_version": 2,
    "version": "0.1.9",

    "name": "Epics Inventory Helper",
    "description": "Simple extension that displays market prices for items when trading",
    "browser_action": {
        "default_icon": "images/icon128.png"
    },
    "icons": {
        "128": "images/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://app.epics.gg/*"],
            "run_at": "document_end",
            "js": ["marketPriceInjector.js", "tradeViewValuator.js", "briefHistorySorter.js"],
            "css": ["style.css"]
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "permissions": [
        "tabs"
    ],
    "web_accessible_resources": [
        "images/coin.png", "spinner.html"
    ]
}
